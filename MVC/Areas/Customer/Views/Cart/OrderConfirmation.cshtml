@model int
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center border shadow p-5 rounded-4 bg-white">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 80px;"></i>
            </div>
            <h1 class="text-dark fw-bold">Order Confirmed Successfully!</h1>
            <p class="text-muted fs-5">Thank you for your purchase. Your order ID is: <span class="fw-bold text-primary">#@Model</span></p>

            <div class="alert alert-info border-0 rounded-3 my-4 py-3">
                <i class="bi bi-info-circle me-2"></i>
                Order details have been sent to your registered email.
            </div>

            <hr />

            <div class="mt-4">
                <p class="text-secondary">Our team will contact you shortly for delivery details.</p>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                   class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm fw-bold">
                    <i class="bi bi-house-door me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>