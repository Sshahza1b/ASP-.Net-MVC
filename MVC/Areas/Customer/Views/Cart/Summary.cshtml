@model MVC.Models.ViewModels.ShoppingCartVM

<form method="post">
    <br />
    <div class="container pb-5">
        <div class="card shadow border-0 mt-4 rounded-4 overflow-hidden">
            <div class="card-header bg-dark bg-gradient text-light py-4 border-0">
                <div class="row px-4 align-items-center">
                    <div class="col-6">
                        <h3 class="text-white mb-0 fw-bold"><i class="bi bi-cart-check-fill me-2"></i>Order Summary</h3>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="bi bi-arrow-left me-1"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body p-4 bg-white">
                <div class="container rounded">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4 border-end">
                            <h4 class="mb-4">
                                <span class="text-dark fw-bold border-bottom border-primary border-3 pb-1">Shipping Details</span>
                            </h4>

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">Full Name</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-person text-primary"></i></span>
                                    <input asp-for="OrderHeader.Name" class="form-control border-start-0" placeholder="Enter your Name" />
                                </div>
                                <span asp-validation-for="OrderHeader.Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">Phone Number</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-telephone text-primary"></i></span>
                                    <input asp-for="OrderHeader.PhoneNumber" class="form-control border-start-0" placeholder="+92 3XX XXXXXXX" />
                                </div>
                                <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">Street Address</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-house-door text-primary"></i></span>
                                    <input asp-for="OrderHeader.StreetAddress" class="form-control border-start-0" placeholder="Street Address" />
                                </div>
                                <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">City</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="bi bi-geo-alt text-primary"></i></span>
                                    <input asp-for="OrderHeader.City" class="form-control border-start-0" placeholder="City" />
                                </div>
                                <span asp-validation-for="OrderHeader.City" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="mb-4">
                                <span class="text-dark fw-bold border-bottom border-primary border-3 pb-1">Order Items</span>
                            </h4>
                            <div class="list-group list-group-flush mb-3">
                                @foreach (var details in Model.ShoppingCartList)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3 bg-transparent border-bottom">
                                        <div class="me-auto">
                                            <div class="fw-bold text-dark">@details.Product.Title</div>
                                            <div class="d-flex align-items-center mt-2">
                                                <a asp-area="Customer" asp-controller="Cart" asp-action="Minus" asp-route-cartId="@details.Id" class="btn btn-outline-secondary btn-sm rounded-circle px-2 py-0">
                                                    <i class="bi bi-dash"></i>
                                                </a>

                                                <span class="mx-3 fw-bold bg-light px-3 py-1 rounded shadow-sm">@details.Count</span>

                                                <a asp-area="Customer" asp-controller="Cart" asp-action="Plus" asp-route-cartId="@details.Id" class="btn btn-outline-secondary btn-sm rounded-circle px-2 py-0">
                                                    <i class="bi bi-plus"></i>
                                                </a>

                                                <a asp-area="Customer"
                                                   asp-controller="Cart"
                                                   asp-action="Remove"
                                                   asp-route-cartId="@details.Id"
                                                   class="btn btn-outline-danger btn-sm ms-3 border-0">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <span class="fw-bold text-dark fs-5">@((details.Product.Price * details.Count).ToString("c"))</span>
                                    </li>
                                }

                                <li class="list-group-item d-flex justify-content-between align-items-center px-3 py-4 mt-3 rounded-3 shadow-sm bg-light border">
                                    <div>
                                        <h5 class="mb-0 text-muted fw-normal">Total Amount</h5>
                                        <small class="text-muted">(Including all taxes)</small>
                                    </div>
                                    <span class="h3 mb-0 fw-bolder text-primary">@Model.OrderHeader.OrderTotal.ToString("c")</span>
                                </li>
                            </div>

                            <div class="alert alert-warning border-0 shadow-sm rounded-3 mt-4 py-3" role="alert">
                                <div class="d-flex">
                                    <i class="bi bi-truck fs-4 me-3 text-dark"></i>
                                    <div>
                                        <span class="fw-bold text-dark d-block">Estimated Delivery</span>
                                        <span class="small text-dark">@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white py-4 border-top border-light">
                <div class="row justify-content-end px-4">
                    <div class="col-12 col-md-4">
                        <button type="submit" class="btn btn-success btn-lg w-100 py-3 rounded-pill fw-bold shadow">
                            CONFIRM ORDER
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

@section Scripts {
    <script>
        function validateInput() {
            // 1. Check karein ke details fields khali to nahi hain
            var name = document.getElementById("name").value;
            var phone = document.getElementById("phone").value;
            var address = document.getElementById("address").value;
            var city = document.getElementById("city").value;

            if (name == "" || phone == "" || address == "" || city == "") {
                alert("Please fill all shipping details!");
                return false;
            }

            // 2. Check karein ke cart khali to nahi (ye server-side se zyada behtar hota hai)
            return true;
        }
    </script>
}