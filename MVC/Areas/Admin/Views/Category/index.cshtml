@model List<Category>

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-white border-0 py-4">
            <div class="d-flex justify-content-between align-items-center px-2">
                <div>
                    <h2 class="text-dark fw-bolder mb-0">Category Management</h2>
                    <p class="text-muted small mb-0">Organize and manage your store categories effortlessly.</p>
                </div>
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm hover-scale">
                    <i class="bi bi-plus-lg me-2"></i>New Category
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 custom-table">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase fs-xs fw-bold tracking-wider">Category Name</th>
                            <th class="py-3 text-uppercase fs-xs fw-bold tracking-wider">Display Order</th>
                            <th class="pe-4 py-3 text-end text-uppercase fs-xs fw-bold tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                        {
                            <tr class="table-row">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="category-icon me-3 bg-primary-soft text-primary rounded-circle d-flex align-items-center justify-content-center">
                                            @obj.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="fw-semibold text-dark">@obj.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-primary border border-primary-subtle px-3 py-2 rounded-pill">
                                        #@obj.DisplayOrder
                                    </span>
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                                           class="btn btn-white btn-sm border-end text-primary action-btn" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                                           class="btn btn-white btn-sm text-danger action-btn" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Premium Look & Feel Styles */
    :root {
        --primary-soft: rgba(13, 110, 253, 0.1);
    }

    .bg-primary-soft {
        background-color: var(--primary-soft);
    }

    .custom-table thead th {
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        border-bottom: 1px solid #f0f0f0;
    }

    .table-row {
        transition: all 0.2s ease;
    }

        .table-row:hover {
            background-color: #fcfcfc !important;
            transform: scale(1.002);
        }

    .category-icon {
        width: 35px;
        height: 35px;
        font-weight: bold;
    }

    .action-btn {
        background-color: white;
        padding: 8px 15px;
        transition: all 0.2s;
    }

        .action-btn:hover {
            background-color: #f8f9fa;
            transform: translateY(-1px);
        }

    .hover-scale {
        transition: transform 0.2s;
    }

        .hover-scale:hover {
            transform: scale(1.05);
        }

    /* Minimalist badge */
    .badge {
        font-size: 0.8rem;
        font-weight: 500;
    }

    .fs-xs {
        font-size: 0.7rem;
    }

    .btn-white {
        background: white;
        border: 1px solid #eee;
    }
</style>