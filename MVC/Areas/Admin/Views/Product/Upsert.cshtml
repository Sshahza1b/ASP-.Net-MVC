@model ProductVM

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden bg-white">
        <div class="card-header bg-white border-0 pt-4 px-4 text-center">
            <h2 class="fw-bolder text-dark mb-1">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            <p class="text-muted small">Fill in the details below to @(Model.Product.Id != 0 ? "modify" : "add") a product in your inventory.</p>
            <div class="header-line mx-auto"></div>
        </div>

        <div class="card-body p-4 p-md-5">
            <form method="post" class="row g-4" enctype="multipart/form-data">
                <input asp-for="Product.Id" hidden />
                <input asp-for="Product.ImageUrl" hidden />

                <div class="row">
                    <div class="col-12 col-lg-9">
                        <div class="p-3">
                            <div class="row g-3">
                                <div class="form-floating col-12 mb-3">
                                    <input asp-for="Product.Title" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="Title" />
                                    <label asp-for="Product.Title" class="ms-2">Product Title</label>
                                    <span asp-validation-for="Product.Title" class="text-danger small"></span>
                                </div>

                                <div class="col-12 mb-3">
                                    <label asp-for="Product.Description" class="ms-2 text-muted fw-bold mb-2 small">Description</label>
                                    <textarea asp-for="Product.Description" class="form-control border-0 bg-light rounded-3 shadow-sm"></textarea>
                                </div>

                                <div class="form-floating col-md-6 mb-3">
                                    <input asp-for="Product.ISBN" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="ISBN" />
                                    <label asp-for="Product.ISBN" class="ms-2">ISBN</label>
                                    <span asp-validation-for="Product.ISBN" class="text-danger small"></span>
                                </div>

                                <div class="form-floating col-md-6 mb-3">
                                    <input asp-for="Product.Author" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="Author" />
                                    <label asp-for="Product.Author" class="ms-2">Author Name</label>
                                    <span asp-validation-for="Product.Author" class="text-danger small"></span>
                                </div>

                                <div class="form-floating col-md-3 mb-3">
                                    <input asp-for="Product.ListPrice" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="List Price" />
                                    <label asp-for="Product.ListPrice" class="ms-2">List Price</label>
                                </div>

                                <div class="form-floating col-md-3 mb-3">
                                    <input asp-for="Product.Price" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="Price" />
                                    <label asp-for="Product.Price" class="ms-2">Price</label>
                                </div>

                                <div class="form-floating col-md-3 mb-3">
                                    <input asp-for="Product.Price50" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="Price 50" />
                                    <label asp-for="Product.Price50" class="ms-2">Price (50+)</label>
                                </div>

                                <div class="form-floating col-md-3 mb-3">
                                    <input asp-for="Product.Price100" class="form-control border-0 bg-light rounded-3 shadow-sm" placeholder="Price 100" />
                                    <label asp-for="Product.Price100" class="ms-2">Price (100+)</label>
                                </div>

                                <div class="form-floating col-md-6 mb-3">
                                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 bg-light rounded-3 shadow-sm">
                                        <option disabled selected>-- Select Category --</option>
                                    </select>
                                    <label asp-for="Product.CategoryId" class="ms-2">Category</label>
                                </div>

                                <div class="form-floating col-md-6 mb-3">
                                    <input type="file" name="file" class="form-control border-0 bg-light rounded-3 shadow-sm" />
                                    <label class="ms-2">Upload Image</label>
                                </div>

                                <div class="row mt-4 g-2">
                                    <div class="col-6 col-md-4">
                                        <button type="submit" class="btn-sexy btn-sexy-primary w-100">
                                            <i class="bi bi-cloud-arrow-up-fill me-2"></i> @(Model.Product.Id != 0 ? "Update" : "Create")
                                        </button>
                                    </div>
                                    <div class="col-6 col-md-4">
                                        <a asp-controller="Product" asp-action="Index" class="btn-sexy btn-sexy-outline w-100">
                                            <i class="bi bi-arrow-left me-2"></i> Back to List
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-3 text-center pt-4">
                        <div class="image-preview-card p-2 shadow-sm border rounded-4 bg-white sticky-top" style="top: 100px;">
                            <p class="small text-muted fw-bold mb-2">Product Cover Preview</p>
                            <img src="@Model.Product.ImageUrl" class="img-fluid rounded-3 shadow-sm border" alt="preview" />
                            @if (string.IsNullOrEmpty(Model.Product.ImageUrl))
                            {
                                <div class="py-5 text-muted"><i class="bi bi-image fs-1 d-block"></i> No Image uploaded</div>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Styling for a "Sexy" Form */
    .header-line {
        width: 60px;
        height: 5px;
        background: linear-gradient(45deg, #0d6efd, #00d4ff);
        border-radius: 10px;
        margin-top: 8px;
    }

    .form-control:focus, .form-select:focus {
        background-color: #fff !important;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1) !important;
        border: 1px solid #0d6efd !important;
    }

    /* Buttons Style */
    .btn-sexy {
        padding: 12px 20px;
        border-radius: 50px;
        font-weight: 700;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        align-items: center;
        justify-content: center;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
        border: none;
    }

    .btn-sexy-primary {
        background: linear-gradient(45deg, #0d6efd, #00d4ff);
        color: white;
        box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
    }

    .btn-sexy-outline {
        background: white;
        color: #6c757d;
        border: 2px solid #eee;
    }

    .btn-sexy:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }

    .image-preview-card img {
        max-height: 400px;
        object-fit: contain;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline | align lineheight | numlist bullist indent outdent',
            content_style: 'body { font-family:Helvetica,Arial,sans-serif; font-size:14px }',
            skin: 'oxide',
            promotion: false,
            branding: false
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}